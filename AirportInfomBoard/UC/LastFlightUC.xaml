<UserControl x:Class="AirportInfomBoard.UC.LastFlightUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirportInfomBoard.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="stackPanel" Background="White" Orientation="Horizontal" Height="50">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Кол. пассажиров"/>
            <TextBlock Margin="10,0,0,0" Text="{Binding CountPassenger}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Text="{Binding IsFlightSt}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Text="{Binding DateFlightSt}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Text="{Binding City}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
